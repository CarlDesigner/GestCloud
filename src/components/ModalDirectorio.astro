---
// Componente Modal para agregar apartamento en el directorio
---

<div
  id="modal-apartamento"
  tabindex="-1"
  class="fixed inset-0 z-50 h-full items-center justify-center bg-black/40 hidden"
>
  <div class="relative w-full max-w-2xl max-h-full mx-auto my-auto">
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <div
        class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600"
      >
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
          Agregar Apartamento
        </h3>
        <button
          type="button"
          id="cerrar-modal-apto"
          class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-x w-3 h-3"
          >
            <path d="M18 6 6 18"></path><path d="m6 6 12 12"></path>
          </svg>
          <span class="sr-only">Cerrar modal</span>
        </button>
      </div>
      <form id="form-apartamento" class="p-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="mb-1 text-sm font-medium text-gray-900 dark:text-white flex items-center gap-1">
              N° Apartamento <span class="text-red-600">*</span>
              <span id="info-numero-apto" class="ml-1" style="display:none;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="inline align-middle text-blue-500 cursor-pointer">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                  <line x1="12" y1="8" x2="12" y2="12" stroke="currentColor" stroke-width="2"/>
                  <circle cx="12" cy="16" r="1" fill="currentColor"/>
                </svg>
                <span class="absolute z-50 hidden group-hover:block bg-gray-900 text-white text-xs rounded px-2 py-1 ml-2 mt-1 shadow-lg" style="min-width:220px;" id="tooltip-numero-apto">
                  El número de apartamento no se puede modificar. Si cometiste un error al registrarlo, elimina el apartamento y créalo de nuevo con el número correcto.
                </span>
              </span>
            </label>
            <input
              required
              name="numero"
              placeholder="Ej: 101, 202, 305"
              class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
              onmouseover="if(this.disabled){document.getElementById('tooltip-numero-apto').classList.remove('hidden');}"
              onmouseout="document.getElementById('tooltip-numero-apto').classList.add('hidden');"
            />
            <script type="text/javascript">
              // Mostrar el ícono solo si el campo está deshabilitado (modo edición)
              document.addEventListener('DOMContentLoaded', () => {
                const input = document.querySelector('input[name=\'numero\']');
                const info = document.getElementById('info-numero-apto');
                if(input && info) {
                  const observer = new MutationObserver(() => {
                    if(input.disabled) {
                      info.style.display = 'inline-block';
                    } else {
                      info.style.display = 'none';
                    }
                  });
                  observer.observe(input, { attributes: true, attributeFilter: ['disabled'] });
                  // Inicial
                  if(input.disabled) info.style.display = 'inline-block';
                }
              });
            </script>
          </div>
          <div>
            <label
              class="block mb-1 text-sm font-medium text-gray-900 dark:text-white"
              >Estado</label
            >
            <select
              name="estado"
              class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            >
              <option value="Ocupado">Ocupado</option>
              <option value="Desocupado">Desocupado</option>
              <option value="En arriendo">En arriendo</option>
              <option value="En venta">En venta</option>
            </select>
          </div>
          <div>
            <label
              class="block mb-1 text-sm font-medium text-gray-900 dark:text-white"
              >Nombre residente principal <span class="text-red-600">*</span
              ></label
            >
            <input
              required
              name="nombre"
              placeholder="Nombre completo del residente"
              class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            />
          </div>
          <div>
            <label
              class="block mb-1 text-sm font-medium text-gray-900 dark:text-white"
              >Contacto residente principal <span class="text-red-600">*</span
              ></label
            >
            <input
              required
              name="contacto"
              placeholder="Celular del residente (10 dígitos)"
              class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            />
          </div>
          <div>
            <label
              class="block mb-1 text-sm font-medium text-gray-900 dark:text-white"
              >Rol residente principal</label
            >
            <select
              name="rol"
              class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            >
              <option value="Arrendatario">Arrendatario</option>
              <option value="Propietario">Propietario</option>
            </select>
          </div>
          <div>
            <label
              class="block mb-1 text-sm font-medium text-gray-900 dark:text-white"
              >Observaciones</label
            >
            <textarea
              name="observaciones"
              placeholder="Notas, o mensajes para tener en cuenta"
              class="border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
            ></textarea>
          </div>
        </div>
        <div class="flex justify-end gap-2 mt-4">
          <button
            type="button"
            id="cancelar-modal-apto"
            class="bg-gray-400 text-white px-4 py-2 rounded hover:bg-gray-500 transition-colors"
            >Cancelar</button
          >
          <button
            type="submit"
            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors"
            >Guardar</button
          >
        </div>
      </form>
    </div>
  </div>
  <!-- Script para la lógica del directorio -->
  <script type="module" src="/src/scripts/directorio-ui.js"></script>
</div>
