	import '../scripts/visitantes-activos.js';

	// Script del cliente para manejar historial de visitantes con CRUD

	document.addEventListener('DOMContentLoaded', () => {
		// Elementos del DOM
		const sinHistorial = document.getElementById('sin-historial');
