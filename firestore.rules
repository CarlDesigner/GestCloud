rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colecci贸n de visitantes activos
    match /visitantes/{document} {
      // Permitir lectura, escritura y eliminaci贸n para todos (desarrollo)
      allow read, write, delete, create, update: if true;
    }
    
    // Reglas para la colecci贸n de historial de visitantes
    match /visitantes_historial/{document} {
      // Permitir lectura, escritura y creaci贸n para todos (desarrollo)
      allow read, write, delete, create, update: if true;
    }
    
    // Reglas generales para otras colecciones
    match /{document=**} {
      // Permitir acceso completo durante desarrollo
      allow read, write, delete, create, update: if true;
    }
  }
}
